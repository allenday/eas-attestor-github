  "license": "MIT",
  "bugs": {
    "url": "https://github.com/allenday/eas-attestor-github/issues"
  },
  "homepage": "https://github.com/allenday/eas-attestor-github#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "protoc-gen-ts": "^0.8.7",
    "ts-jest": "^29.4.1",
    "ts-protoc-gen": "^0.15.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@ethereum-attestation-service/eas-sdk": "^2.9.1-beta.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0"
  }
