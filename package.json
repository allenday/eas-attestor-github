  "description": "EAS Attestor for Github - Link GitHub usernames to Ethereum addresses using EAS",
  "main": "src/main/html/index.html",
  "type": "module",
  "scripts": {
    "dev": "task serve",
    "build": "tsc",
    "test": "jest --config jest.config.cjs",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "lint:fix": "eslint src --ext .ts --fix",
    "format:check": "prettier --check 'src/**/*.ts'",
    "register-repo": "node scripts/task/app/register-repo.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allenday/eas-attestor-github.git"
