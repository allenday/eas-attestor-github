# Staging environment configuration
NODE_ENV=staging
PORT=5001

# 5D secret resolution configuration
NETWORK=CLOUD
ENVIRONMENT=STAGING
COMPONENT=VALIDATOR
CONCERN=DEPLOY

# Bitwarden Secrets Manager (staging credentials)
# These should be set via GCP Secret Manager or equivalent
# BWS_ACCESS_TOKEN=<set-via-secret-manager>
# BWS_PROJECT_ID=<set-via-secret-manager>

# Staging logging (more verbose for debugging)
LOG_LEVEL=debug

# Relaxed security settings for staging
CORS_ORIGIN=*
API_RATE_LIMIT=100
API_BURST_LIMIT=200

# Health check configuration
HEALTH_CHECK_INTERVAL=15000
HEALTH_CHECK_TIMEOUT=3000

# Validation settings
VALIDATION_TIMEOUT=180000
MAX_GIST_SIZE=100000

# Metrics and monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Staging-specific features
ENABLE_DEBUG_ENDPOINTS=true
MOCK_EXTERNAL_APIS=false