# Production environment configuration
NODE_ENV=production
PORT=5001

# 5D secret resolution configuration
NETWORK=CLOUD
ENVIRONMENT=PROD
COMPONENT=VALIDATOR
CONCERN=DEPLOY

# Bitwarden Secrets Manager (production credentials)
# These should be set via GCP Secret Manager or equivalent
# BWS_ACCESS_TOKEN=<set-via-secret-manager>
# BWS_PROJECT_ID=<set-via-secret-manager>

# Production logging
LOG_LEVEL=info

# Security settings
CORS_ORIGIN=https://yourdomain.com
API_RATE_LIMIT=10
API_BURST_LIMIT=20

# Health check configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Validation settings
VALIDATION_TIMEOUT=120000
MAX_GIST_SIZE=100000

# Metrics and monitoring
METRICS_ENABLED=true
METRICS_PORT=9090